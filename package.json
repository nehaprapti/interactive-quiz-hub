{
  "name": "interactive-quiz-hub",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:full": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm run build --workspace=frontend",
    "install:all": "npm install && npm install --workspaces",
    "start": "npm run build:frontend && cross-env NODE_ENV=production node backend/src/index.js",
    "test": "npm run test --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0"
  }
}